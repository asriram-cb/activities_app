<div class="row">
  <aside class="span3">
    <section>
      <%= render 'shared/user_info' %>
    </section>
  </aside>
  <div class="span9">
    
    <h1>Welcome, <%= current_user.name %>!</h1>

    <% if current_user.acts.count > 0 %>
      <h2>Ready to do more fun stuff?</h2>
    <% else %>
      <h2>Start by doing some fun stuff!</h2>
    <% end %>

    <% (1..Activity.count).to_a.sort{ rand() - 0.5 }[0..Activity.count].each do |n| %>
      <% @link_title = Activity.find(n).name.capitalize + '!' %>
      <a href="/" class="btn btn-large btn-primary act-creator" id="act-creator-<%= n.to_s %>"><%= @link_title %></a>
    <% end %>

    <%= render 'shared/act_form' %>
  </div>
</div>