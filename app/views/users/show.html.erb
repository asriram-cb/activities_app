<% provide(:title, @user.name) %>
<div class="row">

	<aside class="span4">
		<section>
			<h1>
				<%= gravatar_for @user, size: 70 %>
				<%= @user.name %>
			</h1>
      <span><%= @user.email %></span>
      <span><%= pluralize(@acts.count, "activity") %></span>
      <span><%= total_calories(@user.acts) %> calories</span>
		</section>
	</aside>

  <div class="span8">
    <% if @user.acts.any? %>
      <h3>I've done <%= pluralize(@acts.count, "activity") %></h3>
      <%= render 'shared/feed', :@feed_items => @acts %>
      <%= will_paginate @acts %>
    <% else %>
      <h3>I haven't done any activities</h3>
      <% if current_user == @user %>
        <p><%= link_to "Do some.", root_url %></p>
      <% end %>
    <% end %>
  </div>
</div>