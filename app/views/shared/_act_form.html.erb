<%= form_for(@act) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :minutes %>
  <%= f.text_field :minutes, placeholder: "1-300" %>

  <%= f.label :completed %>
    <!--<%= f.datetime_local_field :completed, placeholder: Time.now %> -->
  <%= select_datetime Time.now, :prefix => :completed_input %>

  <%= f.submit "Do", class: "btn btn-large btn-primary" %>
<% end %>