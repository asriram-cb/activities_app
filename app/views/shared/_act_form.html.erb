<%= form_for(@act) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :minutes %>
  <%= f.text_field :minutes, placeholder: "1-300" %>

  <%= f.label :completed %>
  <%= select_datetime Time.now, :prefix => :completed_input %>

  <%= f.hidden_field :activity_id %>

  <%= f.submit "Do", class: "btn btn-primary" %>
<% end %>